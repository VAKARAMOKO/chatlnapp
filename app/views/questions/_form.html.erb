
<%= simple_form_for(@question ) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
  	<%= render "info_users" %>
  	
    <%= f.input :question, label: "Quelle est votre question ou votre suggestion ?", input_html: { class: "text "}, wrapper: false, label_html: {class: "label"}, placeholder: "Commencez vos Questions par << Comment >>, << Pourquoi>>, << Que >>, etc...", autofocus: true %>
  </div>
</div>
<%= f.button :submit,'Ajouter Une Question', class: "button is-info is-rounded " %>
<% end %>



