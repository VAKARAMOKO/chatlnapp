<% @questions.each do | question | %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-40x40 is-rounded">       
          
         <img class="is-rounded" src="https://bulma.io/images/placeholders/is-40x40.png">

        </figure>
      </div>
      <div class="media-content">
        <div class="content">

          <strong><%= question.user.Nom_Complet %></strong>
          <small>, <%= question.user.bio %></small><br/>
        <div class="title">
        <p><%= question.question %></p>
          
        </div>
        </div>
        <!--insert the option to anwser, delete, and other options/!-->
        <% if user_signed_in? && current_user.id == question.user_id %>
          <nav class="level">
            <div class="level-left is-mobile is-right">
              <%= link_to question, class: "level-item" do %>
                <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
              <% end %>
              <%= link_to edit_question_path(question), class: "level-item" do %>
                <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
              <% end %>
              <%= link_to question, method: :delete, data: { confirm: "Etes-vous sÃ»re de vouloir supprimez ?" } do %>
                  <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
              <% end %>
                           
            </div>
          </nav>
        <% end %>
      </div>
    </article>
  </div>
<% end %>