<div id="comment">
  <div class="user-name">
    <%= link_to comment.user.Nom_Complet, profile_path(comment.user.Nom_Complet) %>
  </div>

  <div class="comment-content">
    <%= comment.content %>
  </div>
  <% if comment.user.id == current_user.id %>
    <%= link_to course_comment_path(course, comment), method: :delete, data: {course_id: course.id, value: course.comments.count, confirm: "Are you sure?" }, remote: true, id: "delete-#{comment.id}", class: "delete-comment" do %>
      <span>(class="glyphicon glyphicon-remove delete-comment-icon")</span>
    <% end %>
  <% end %>
</div>
