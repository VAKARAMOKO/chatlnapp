<div class="column is-3  is-vcentered">
	<nav class="panel">
		<p class="panel-heading">Profile</p>
		<div class="panel-block">
			<article class="media">
				<div class="media-left">
					<figure class="image is-64x64">
						<img src="https://bulma.io/images/placeholders/64x64.png">
					</figure>
				</div>
				<div class="media-content">
					<div class="content">
						<p><strong><%= current_user.Nom_Complet %></strong><br /></p>
						<small><%= current_user.bio %></small><br/>
					</div>
				</div>
			</article>
		</div>
		<div class="panel-block">
			<div class="level is-mobile">
				<div class="level-item has-centered-text">
					<div>
						<p class="heading"><i class="fas fa-friends">Amis</i></p>
						<p class="title is-6"><%= current_user.questions.count %></p>
					</div>
				</div>
				<div class="level-item has-centered-text">
					<div>
						<p class="heading">Cours</p>
						<p class="title is-6"><%= current_user.course.count %></p>
					</div>
				</div>
			</div>
		</div>
		


	</nav>	
		
	<%= render 'trend_courses' %>
</div>

